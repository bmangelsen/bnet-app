<form class="form-horizontal">
  <fieldset>
    <legend>Well met! Please choose your realm and character name:</legend>

    <div class="form-group">
      <label for="select" class="col-lg-1 control-label">Realm</label>
        <div class="col-lg-2">
          <select class="form-control" id="select">
            <%= render 'list' %>
          </select>
        </div>
    </div>

    <div class="form-group">
      <label for="textArea" class="col-lg-1 control-label">Name</label>
      <div class="col-lg-2">
        <textarea class="form-control" rows="1" id="textArea"></textarea>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-1">
        <button type="reset" class="btn btn-default">Cancel</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>

  </fieldset>
</form>
